<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">


	<!-- A ui:style tag that contains all of CSS definitions for this template. 
		These style names can be referenced in this template file by 
		using “{style.class-name}” -->

	<ui:style>
	.message {
		border: 1px solid black;
		background: darkblue;
		color: white;
	}
	
	.okButton {
		background: black;
		color: white;
		display: block;
		font-size: 16pt;
		margin: auto;
	}
	</ui:style>

	<!-- An HTMLPanel is a common choice for use as a top level widget, since 
		it allows to mix raw html and widgets within the template. -->

	<g:HTMLPanel>
		<h1>Message</h1>
		<div ui:field="message" class="{style.message}" />
		<br />
		<g:Button ui:field="okButton" styleName="{style.okButton}"
			text="I Understand" />
	</g:HTMLPanel>

</ui:UiBinder> 